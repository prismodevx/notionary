<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ReminderFragment">
    <fragment
        android:id="@+id/NoteFragment"
        android:name="com.example.notionary.fragments.NoteFragment"
        android:label="Note Fragment"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_NoteFragment_to_LoginFragment"
            app:destination="@+id/LoginFragment">
        </action>
    </fragment>
    <fragment
        android:id="@+id/ReminderFragment"
        android:name="com.example.notionary.fragments.ReminderFragment"
        android:label="Reminder Fragment"
        tools:layout="@layout/fragment_reminder" />

    <fragment
        android:id="@+id/SettingsFragment"
        android:name="com.example.notionary.fragments.SettingsFragment"
        android:label="Settings Fragment"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.notionary.fragments.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/fragment_login">
    </fragment>
</navigation>